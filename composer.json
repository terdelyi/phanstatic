{
    "name": "terdelyi/phanstatic",
    "description": "A simple, lightweight and CLI based static site generator",
    "type": "package",
    "license": "MIT",
    "authors": [
        {
            "name": "Tamas Erdelyi",
            "homepage": "https://terdelyi.co.uk"
        }
    ],
    "require": {
        "php": ">=8.2",
        "league/commonmark": "^2.4",
        "spatie/yaml-front-matter": "^2.0",
        "symfony/console": "^7.1",
        "symfony/filesystem": "^7.0",
        "symfony/finder": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan-mockery": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Terdelyi\\Phanstatic\\": "src/"
        },
        "files": [
            "src/Support/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/phanstatic"
    ],
    "scripts": {
        "check-style": "php-cs-fixer check --config .php-cs-fixer.php",
        "fix-style": "php-cs-fixer fix --config .php-cs-fixer.php",
        "analyse": "phpstan analyse -c phpstan.neon",
        "tests": "phpunit --configuration phpunit.xml"
    }
}
