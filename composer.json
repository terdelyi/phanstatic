{
    "name": "terdelyi/phanstatic",
    "type": "package",
    "license": "MIT",
    "authors": [
        {
            "name": "Tamas Erdelyi",
            "homepage": "https://terdelyi.co.uk"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "league/commonmark": "^2.4",
        "spatie/yaml-front-matter": "^2.0",
        "symfony/console": "^7.0",
        "symfony/filesystem": "^7.0",
        "symfony/finder": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Terdelyi\\Phanstatic\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/phanstatic"
    ],
    "scripts": {
        "check": "php-cs-fixer check",
        "fix": "php-cs-fixer fix",
        "static": "phpstan analyse",
        "tests": "phpunit tests/"
    }
}
